<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorLevel="1"
    hoistConstants="true"
    resolveFromConfigFile="true"
    allowPhpStormGenerics="true"
    findUnusedPsalmSuppress="true"
    findUnusedVariablesAndParams="true"
    ensureArrayStringOffsetsExist="true"
    addParamDefaultToDocblockType="true"
>
    <issueHandlers>
        <UnusedVariable>
            <errorLevel type="suppress">
                <file name="libs/lexer/src/Multistate.php"/>
            </errorLevel>
        </UnusedVariable>
        <RedundantCondition errorLevel="suppress" />
        <MoreSpecificReturnType errorLevel="suppress" />
        <LessSpecificReturnStatement errorLevel="suppress" />
    </issueHandlers>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="libs/buffer/tests" />
            <directory name="libs/compiler/tests" />
            <directory name="libs/exception/tests" />
            <directory name="libs/lexer/tests" />
            <directory name="libs/parser/tests" />
            <directory name="libs/position/tests" />
            <directory name="libs/source/tests" />
            <directory name="libs/visitor/tests" />
        </ignoreFiles>
    </projectFiles>
</psalm>
